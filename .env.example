# Database Configuration
# Database URL for Prisma. For local development, use a connection string like:
# For SQLite: "file:./dev.db"
# For PostgreSQL: "postgresql://username:password@localhost:5432/dbname"
# For Prisma Accelerate: "prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key"
DATABASE_URL="your_database_url_here"

# Admin Configuration
# Email address for the admin user
ADMIN_EMAIL="your_admin_email@example.com"

# Kinde Auth Configuration
# Get these values from your Kinde dashboard at https://kinde.com
# Client ID for your Kinde application
KINDE_CLIENT_ID="your_kinde_client_id"
# Client secret for your Kinde application
KINDE_CLIENT_SECRET="your_kinde_client_secret"
# Issuer URL from Kinde (e.g., https://yourdomain.kinde.com)
KINDE_ISSUER_URL="https://yourdomain.kinde.com"
# Site URL for your application (e.g., http://localhost:3000 or https://yourdomain.com)
KINDE_SITE_URL="http://localhost:3000"
SITE_URL="http://localhost:3000"
# Redirect URL after logout
KINDE_POST_LOGOUT_REDIRECT_URL="http://localhost:3000"
# Redirect URL after login
KINDE_POST_LOGIN_REDIRECT_URL="http://localhost:3000/admin"

# Stripe Configuration (for store functionality)
# Get your TEST keys from: https://dashboard.stripe.com/test/apikeys
# IMPORTANT: Use TEST keys for development, not live keys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Disqus Configuration
# Get your shortname from https://disqus.com/admin/
DISQUS_SHORTNAME="your_disqus_shortname"

# GitHub API Token
# Create a personal access token at https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_API_TOKEN="your_github_api_token"

# Spotify API Credentials
# Get these from Spotify Developer Dashboard at https://developer.spotify.com/dashboard
# 1. Create an app in your dashboard
# 2. Copy the Client ID and Client Secret
# These are used to authenticate with Spotify Web API using OAuth2
SPOTIFY_CLIENT_ID="your_spotify_client_id"
SPOTIFY_CLIENT_SECRET="your_spotify_client_secret"
# Optional: Add a refresh token to enable user-specific data access (currently playing, recently played)
SPOTIFY_REFRESH_TOKEN="your_spotify_refresh_token"

# Umami Analytics
# Get your Umami ID from your Umami dashboard
NEXT_UMAMI_ID="your_umami_id"

# OpenAI API Key
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY="your_openai_api_key"